<Window x:Class="DeadEditor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="400" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="350" MinWidth="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Settings Content -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Library Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

            <!-- Library Root Path (Audience Recordings) -->
            <TextBlock Text="Library Root Path (Audience Recordings):" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="LibraryRootTextBox" VerticalAlignment="Center" IsReadOnly="True"/>
                <Button Grid.Column="1" x:Name="BrowseLibraryButton" Content="Browse..." Width="100" Margin="10,0,0,0" Click="BrowseLibraryButton_Click"/>
            </Grid>

            <!-- Official Releases Path -->
            <TextBlock Text="Official Releases Path (Dave's Picks, Road Trips, etc.):" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="OfficialReleasesTextBox" VerticalAlignment="Center" IsReadOnly="True"/>
                <Button Grid.Column="1" x:Name="BrowseOfficialReleasesButton" Content="Browse..." Width="100" Margin="10,0,0,0" Click="BrowseOfficialReleasesButton_Click"/>
            </Grid>

            <!-- Primary Artist Name -->
            <TextBlock Text="Primary Artist Name:" Margin="0,0,0,5"/>
            <TextBlock Text="(Leave empty to show all artists from MusicBrainz matches)"
                       FontSize="11" Foreground="Gray" Margin="0,0,0,5"/>
            <TextBox x:Name="PrimaryArtistTextBox" Margin="0,0,0,20"/>

            <Separator Margin="0,0,0,20"/>

            <!-- Song Database Section -->
            <TextBlock Text="Song Database" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
            <TextBlock Text="Add songs to the database without recompiling the application."
                       TextWrapping="Wrap" Margin="0,0,0,10" Foreground="Gray"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Button x:Name="AddSongButton" Content="Add Song..." Width="150" Height="35"
                        HorizontalAlignment="Left" Click="AddSongButton_Click"
                        Background="#E3F2FD" FontWeight="SemiBold" Margin="0,0,10,0"/>
                <Button x:Name="ManageSongsButton" Content="Manage Songs..." Width="150" Height="35"
                        HorizontalAlignment="Left" Click="ManageSongsButton_Click"
                        Background="#E8F5E9" FontWeight="SemiBold"/>
            </StackPanel>

            <Separator Margin="0,0,0,20"/>

            <!-- Reset Data Section -->
            <TextBlock Text="Data Management" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
            <TextBlock Text="Reset all library data and settings. All files will be moved to the Recycle Bin."
                       TextWrapping="Wrap" Margin="0,0,0,10" Foreground="Gray"/>
            <Button x:Name="ResetDataButton" Content="Reset All Data" Width="150" Height="35"
                    HorizontalAlignment="Left" Click="ResetDataButton_Click"
                    Background="#FFEBEE" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Close Button -->
        <Button Grid.Row="2" x:Name="CloseButton" Content="Close" Width="100" Height="30"
                HorizontalAlignment="Right" Click="CloseButton_Click"/>
    </Grid>
</Window>
