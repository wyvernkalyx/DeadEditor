<Window x:Class="DeadEditor.AddSongDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Song to Database" Height="420" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="420" MinWidth="550">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <TextBlock Grid.Row="0" Text="Add New Song" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Artist Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="Artist:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Grid.Column="0" x:Name="ArtistComboBox" IsEditable="True"
                          VerticalAlignment="Center" Height="30" FontSize="13"/>
                <Button Grid.Column="1" x:Name="RefreshArtistsButton" Content="ðŸ”„" Width="35" Height="30"
                        Margin="8,0,0,0" Click="RefreshArtistsButton_Click"
                        ToolTip="Refresh artist list"/>
            </Grid>
            <TextBlock TextWrapping="Wrap" Margin="0,5,0,0" FontSize="11.5">
                <Run Text="Select an existing artist or " Foreground="Gray"/>
                <Run Text="type a new artist name" Foreground="#0066CC" FontWeight="SemiBold"/>
                <Run Text=" to create one" Foreground="Gray"/>
            </TextBlock>
        </StackPanel>

        <!-- Official Title -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Official Song Title:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox x:Name="OfficialTitleTextBox" Height="30" FontSize="13"/>
            <TextBlock Text="The canonical/correct title for this song"
                       Foreground="Gray" FontSize="11.5" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Aliases -->
        <StackPanel Grid.Row="3" Margin="0,0,0,15">
            <TextBlock Text="Aliases (optional):" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <TextBox x:Name="AliasesTextBox" Height="80" TextWrapping="Wrap"
                     AcceptsReturn="True" VerticalScrollBarVisibility="Auto" FontSize="13"/>
            <TextBlock Text="Enter alternative spellings or abbreviations, one per line"
                       Foreground="Gray" FontSize="11.5" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Status Message -->
        <TextBlock Grid.Row="4" x:Name="StatusTextBlock" Text=""
                   Foreground="Green" FontWeight="SemiBold" FontSize="12"
                   VerticalAlignment="Top" Margin="0,5,0,0" TextWrapping="Wrap"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="AddButton" Content="Add Song" Width="110" Height="35"
                    Margin="0,0,10,0" Click="AddButton_Click" IsDefault="True"
                    FontSize="13" FontWeight="SemiBold"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="110" Height="35"
                    Click="CancelButton_Click" IsCancel="True" FontSize="13"/>
        </StackPanel>
    </Grid>
</Window>
