<Window x:Class="DeadEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeadEditor"
        mc:Ignorable="d"
        Title="Dead Editor" Height="700" Width="1100">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Settings..." Click="SettingsMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Folder Selection -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Source:" VerticalAlignment="Center" Margin="0,0,10,0" Width="80"/>
            <TextBox Grid.Column="1" x:Name="FolderPathTextBox" VerticalAlignment="Center" IsReadOnly="True"/>
            <Button Grid.Column="2" x:Name="BrowseButton" Content="Browse..." Width="100" Margin="10,0,0,0" Click="BrowseButton_Click"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Album Information Panel -->
            <GroupBox Grid.Column="0" Header="ALBUM INFORMATION" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">
                    <!-- Artwork Display -->
                    <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="200" Margin="0,0,0,15" HorizontalAlignment="Center">
                        <Grid>
                            <TextBlock x:Name="NoArtworkText" Text="No Artwork"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="Gray" FontStyle="Italic"/>
                            <Image x:Name="ArtworkImage" Stretch="Uniform" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- Artwork Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Button x:Name="ChangeArtworkButton" Content="Change..." Width="80" Margin="0,0,5,0" Click="ChangeArtworkButton_Click"/>
                        <Button x:Name="RemoveArtworkButton" Content="Remove" Width="80" Margin="5,0,0,0" Click="RemoveArtworkButton_Click"/>
                    </StackPanel>

                    <Separator Margin="0,0,0,15"/>

                    <TextBlock Text="Artist:" Margin="0,0,0,5"/>
                    <TextBox x:Name="ArtistTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="Date:" Margin="0,0,0,5"/>
                    <TextBox x:Name="DateTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="Venue:" Margin="0,0,0,5"/>
                    <TextBox x:Name="VenueTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="City:" Margin="0,0,0,5"/>
                    <TextBox x:Name="CityTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="State:" Margin="0,0,0,5"/>
                    <TextBox x:Name="StateTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="Official Release (optional):" Margin="0,0,0,5" TextWrapping="Wrap"/>
                    <TextBox x:Name="OfficialReleaseTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Album Title Preview:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Background="#F5F5F5">
                        <TextBlock x:Name="AlbumPreviewTextBlock" TextWrapping="Wrap" MinHeight="40"/>
                    </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- Track List and Editor -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Track List -->
                <GroupBox Grid.Row="0" Header="TRACK LIST" Margin="0,0,0,10">
                    <DataGrid x:Name="TracksDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionChanged="TracksDataGrid_SelectionChanged"
                              LoadingRow="TracksDataGrid_LoadingRow"
                              IsReadOnly="True"
                              Margin="5">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding TrackNumber}" Width="40"/>
                            <DataGridTextColumn Header="Song" Binding="{Binding DisplayTitle}" Width="200"/>
                            <DataGridTextColumn Header="Final Metadata (Preview)" Binding="{Binding PreviewMetadata}" Width="*"/>
                            <DataGridCheckBoxColumn Header="â†’" Binding="{Binding HasSegue}" Width="40"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Selected Track Editor -->
                <GroupBox Grid.Row="1" Header="SELECTED TRACK" MinHeight="120">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="SelectedTitleTextBox" VerticalAlignment="Center" TextChanged="SelectedTrack_Changed"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Segue:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <CheckBox Grid.Row="0" Grid.Column="3" x:Name="SelectedSegueCheckBox" VerticalAlignment="Center" Checked="SelectedTrack_Changed" Unchecked="SelectedTrack_Changed"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Date:" VerticalAlignment="Center" Margin="0,10,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="SelectedDateTextBox" VerticalAlignment="Center" Margin="0,10,0,0" TextChanged="SelectedTrack_Changed"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- File Operations Group -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Padding="15,10" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="File Operations" FontWeight="SemiBold" FontSize="12" Foreground="#666666" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ReadButton" Content="Read from Files" Height="32" Padding="15,5" Margin="5" Click="ReadButton_Click"/>
                        <Button x:Name="NormalizeButton" Content="Normalize All Songs" Height="32" Padding="15,5" Margin="5" Click="NormalizeButton_Click"/>
                        <Button x:Name="WriteButton" Content="Write to Files" Height="32" Padding="15,5" Margin="5" Click="WriteButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Library Actions Group -->
            <Border Grid.Column="2" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="5" Padding="15,10" Margin="10,0,0,0" Background="#F5FAFF">
                <StackPanel>
                    <TextBlock Text="Library" FontWeight="SemiBold" FontSize="12" Foreground="#1976D2" Margin="0,0,0,8" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="ImportButton" Content="Import to Library" Height="32" Padding="15,5" Margin="5" Click="ImportButton_Click" FontWeight="Bold"/>
                        <Button x:Name="BrowseLibraryButton" Content="Browse Library" Height="32" Padding="15,5" Margin="5" Click="BrowseLibraryButton_Click" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Audio Player and Status Bar -->
        <Border Grid.Row="3" BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="10" Margin="0,10,0,0" Background="#F8F8F8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Playback Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Control Buttons -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button x:Name="PreviousButton" Content="â®" Width="40" Height="35" Margin="0,0,5,0" FontSize="16" Click="PreviousButton_Click" ToolTip="Previous Track"/>
                        <Button x:Name="PlayPauseButton" Content="â–¶" Width="50" Height="35" Margin="0,0,5,0" FontSize="20" Click="PlayPauseButton_Click" FontWeight="Bold" ToolTip="Play/Pause"/>
                        <Button x:Name="StopButton" Content="â¹" Width="40" Height="35" Margin="0,0,5,0" FontSize="16" Click="StopButton_Click" ToolTip="Stop"/>
                        <Button x:Name="NextButton" Content="â­" Width="40" Height="35" Margin="0,0,10,0" FontSize="16" Click="NextButton_Click" ToolTip="Next Track"/>
                    </StackPanel>

                    <!-- Now Playing Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                        <TextBlock x:Name="NowPlayingText" Text="No track playing" FontWeight="SemiBold" FontSize="13"/>
                        <TextBlock x:Name="PlaybackTimeText" Text="00:00 / 00:00" FontSize="11" Foreground="Gray" Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Volume Control -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ”Š" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <Slider x:Name="VolumeSlider" Width="80" Minimum="0" Maximum="100" Value="75" VerticalAlignment="Center"
                                ValueChanged="VolumeSlider_ValueChanged" ToolTip="Volume"/>
                    </StackPanel>
                </Grid>

                <!-- Audio Scrubber (Progress Bar) -->
                <Slider Grid.Row="1" x:Name="AudioScrubber" Minimum="0" Maximum="100" Value="0"
                        Height="25" Margin="0,5,0,5"
                        PreviewMouseDown="AudioScrubber_PreviewMouseDown"
                        PreviewMouseUp="AudioScrubber_PreviewMouseUp"
                        ToolTip="Seek"/>

                <!-- Status and Import Progress -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" x:Name="StatusTextBlock" Text="Ready" FontSize="11" Margin="0,0,0,5"/>
                    <ProgressBar Grid.Row="1" x:Name="ProgressBar" Height="18" Visibility="Collapsed" Minimum="0" Maximum="100"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Notification Panel -->
        <Border x:Name="NotificationPanel"
                Grid.Row="0" Grid.RowSpan="4"
                Background="#E0FFFFFF"
                Visibility="Collapsed"
                MouseDown="NotificationPanel_MouseDown">
            <Border Background="White"
                    BorderBrush="Gray"
                    BorderThickness="2"
                    CornerRadius="5"
                    MaxWidth="500"
                    MaxHeight="300"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="NotificationTitle" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <ScrollViewer Grid.Row="1" MaxHeight="150" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="NotificationMessage" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    </ScrollViewer>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="NotificationYesButton" Content="Yes" Width="80" Height="30" Margin="5" Click="NotificationYes_Click" Visibility="Collapsed"/>
                        <Button x:Name="NotificationNoButton" Content="No" Width="80" Height="30" Margin="5" Click="NotificationNo_Click" Visibility="Collapsed"/>
                        <Button x:Name="NotificationOkButton" Content="OK" Width="80" Height="30" Margin="5" Click="NotificationOk_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        </Grid>
    </DockPanel>
</Window>
