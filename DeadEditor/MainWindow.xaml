<Window x:Class="DeadEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeadEditor"
        mc:Ignorable="d"
        Title="Dead Editor - Import" Height="700" Width="1100"
        Background="#1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="CaretBrush" Value="#FFFFFF"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D30"/>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="#2D2D30" Foreground="#FFFFFF" FontSize="16">
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Style.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="#094771"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>
                        <Trigger Property="IsSubmenuOpen" Value="True">
                            <Setter Property="Background" Value="#094771"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
                <Style TargetType="Separator">
                    <Setter Property="Background" Value="#555555"/>
                </Style>
            </Menu.Resources>
            <MenuItem Header="_File" Foreground="#FFFFFF">
                <MenuItem Header="_Settings..." Click="SettingsMenuItem_Click" FontSize="16" Foreground="#FFFFFF" Background="#2D2D30"/>
                <Separator Background="#555555"/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click" FontSize="16" Foreground="#FFFFFF" Background="#2D2D30"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

        <!-- Top Controls -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Source Selection -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" x:Name="BrowseButton" Content="Select Folder..." Width="150" Height="35" Margin="0,0,10,0" Click="BrowseButton_Click" FontSize="16"/>
                <TextBox Grid.Column="1" x:Name="FolderPathTextBox" VerticalAlignment="Center" IsReadOnly="True" FontSize="16"/>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="ReadButton" Content="Read from Files" Height="35" Padding="15,5" Margin="0,0,8,0" Click="ReadButton_Click" FontSize="16"/>
                <Button x:Name="NormalizeButton" Content="Normalize All Songs" Height="35" Padding="15,5" Margin="0,0,8,0" Click="NormalizeButton_Click" FontSize="16"/>
                <Button x:Name="WriteButton" Content="Write to Files" Height="35" Padding="15,5" Margin="0,0,8,0" Click="WriteButton_Click" FontSize="16"/>
                <Button x:Name="ViewInfoButton" Content="View Info File" Height="35" Padding="15,5" Margin="0,0,8,0" Click="ViewInfoButton_Click" FontSize="16" IsEnabled="False"/>
                <Button x:Name="ImportButton" Content="Import to Library" Height="35" Padding="15,5" Margin="0,0,8,0" Click="ImportButton_Click" FontWeight="Bold" FontSize="16"/>
                <Button x:Name="CancelButton" Content="Cancel" Height="35" Padding="15,5" Margin="0,0,0,0" Click="CancelButton_Click" FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Album Information Panel -->
            <GroupBox Grid.Column="0" Header="ALBUM INFORMATION" Margin="0,0,10,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10">
                    <!-- Artwork Display -->
                    <Border BorderBrush="Gray" BorderThickness="1" Width="200" Height="200" Margin="0,0,0,15" HorizontalAlignment="Center">
                        <Grid>
                            <TextBlock x:Name="NoArtworkText" Text="No Artwork"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="Gray" FontStyle="Italic"/>
                            <Image x:Name="ArtworkImage" Stretch="Uniform" Visibility="Collapsed"/>
                        </Grid>
                    </Border>

                    <!-- Artwork Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <Button x:Name="ChangeArtworkButton" Content="Change..." Width="80" Margin="0,0,5,0" Click="ChangeArtworkButton_Click"/>
                        <Button x:Name="RemoveArtworkButton" Content="Remove" Width="80" Margin="5,0,0,0" Click="RemoveArtworkButton_Click"/>
                    </StackPanel>

                    <Separator Margin="0,0,0,15"/>

                    <TextBlock Text="Artist:" Margin="0,0,0,5"/>
                    <TextBox x:Name="ArtistTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="Date:" Margin="0,0,0,5"/>
                    <TextBox x:Name="DateTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="Venue:" Margin="0,0,0,5"/>
                    <TextBox x:Name="VenueTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="City:" Margin="0,0,0,5"/>
                    <TextBox x:Name="CityTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="State:" Margin="0,0,0,5"/>
                    <TextBox x:Name="StateTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <TextBlock Text="Official Release (optional):" Margin="0,0,0,5" TextWrapping="Wrap"/>
                    <TextBox x:Name="OfficialReleaseTextBox" Margin="0,0,0,15" TextChanged="AlbumInfo_Changed"/>

                    <Separator Margin="0,10,0,10"/>

                    <TextBlock Text="Album Title Preview:" Margin="0,0,0,5" FontWeight="Bold"/>
                    <Border BorderBrush="#555555" BorderThickness="1" Padding="5" Background="#2D2D30">
                        <TextBlock x:Name="AlbumPreviewTextBlock" TextWrapping="Wrap" MinHeight="40" Foreground="#CCCCCC"/>
                    </Border>
                    </StackPanel>
                </ScrollViewer>
            </GroupBox>

            <!-- Track List and Editor -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Track List -->
                <GroupBox Grid.Row="0" Header="TRACK LIST" Margin="0,0,0,10">
                    <DataGrid x:Name="TracksDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              SelectionChanged="TracksDataGrid_SelectionChanged"
                              LoadingRow="TracksDataGrid_LoadingRow"
                              IsReadOnly="True"
                              Margin="5"
                              Background="#1E1E1E"
                              Foreground="#FFFFFF"
                              RowBackground="#1E1E1E"
                              AlternatingRowBackground="#252526"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#3F3F46"
                              BorderBrush="#3F3F46"
                              FontSize="16">
                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Style.Triggers>
                                    <Trigger Property="AlternationIndex" Value="1">
                                        <Setter Property="Background" Value="#252526"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#264F78"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="#CCCCCC"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="8,6"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="16"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="BorderBrush" Value="#3F3F46"/>
                                <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#264F78"/>
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Foreground" Value="#FFFFFF"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Binding="{Binding TrackNumber}" Width="40"/>
                            <DataGridTextColumn Header="Song" Binding="{Binding DisplayTitle}" Width="200"/>
                            <DataGridTextColumn Header="Final Metadata (Preview)" Binding="{Binding PreviewMetadata}" Width="*"/>
                            <DataGridCheckBoxColumn Header="â†’" Binding="{Binding HasSegue}" Width="40"/>
                            <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="70"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>

                <!-- Selected Track Editor -->
                <GroupBox Grid.Row="1" Header="SELECTED TRACK" MinHeight="120">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Title:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="SelectedTitleTextBox" VerticalAlignment="Center" TextChanged="SelectedTrack_Changed"/>

                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Segue:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <CheckBox Grid.Row="0" Grid.Column="3" x:Name="SelectedSegueCheckBox" VerticalAlignment="Center" Checked="SelectedTrack_Changed" Unchecked="SelectedTrack_Changed"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Date:" VerticalAlignment="Center" Margin="0,10,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="SelectedDateTextBox" VerticalAlignment="Center" Margin="0,10,0,0" TextChanged="SelectedTrack_Changed"/>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar (simplified - no player) -->
        <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="10" Background="#2D2D30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" x:Name="StatusTextBlock" Text="Ready" FontSize="14" Margin="0,0,0,5" Foreground="#CCCCCC"/>
                <ProgressBar Grid.Row="1" x:Name="ProgressBar" Height="20" Visibility="Collapsed" Minimum="0" Maximum="100"/>
            </Grid>
        </Border>

        <!-- Notification Panel -->
        <Border x:Name="NotificationPanel"
                Grid.Row="0" Grid.RowSpan="2"
                Background="#D0000000"
                Visibility="Collapsed"
                MouseDown="NotificationPanel_MouseDown">
            <Border Background="#2D2D30"
                    BorderBrush="#007ACC"
                    BorderThickness="2"
                    CornerRadius="8"
                    MaxWidth="600"
                    MaxHeight="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.8"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" x:Name="NotificationTitle" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" Foreground="#FFFFFF"/>
                    <ScrollViewer Grid.Row="1" MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                        <TextBlock x:Name="NotificationMessage" TextWrapping="Wrap" FontSize="16" Foreground="#CCCCCC" LineHeight="24"/>
                    </ScrollViewer>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="NotificationYesButton" Content="Yes" Width="100" Height="40" Margin="5" Click="NotificationYes_Click" Visibility="Collapsed" FontSize="16" FontWeight="SemiBold"/>
                        <Button x:Name="NotificationNoButton" Content="No" Width="100" Height="40" Margin="5" Click="NotificationNo_Click" Visibility="Collapsed" FontSize="16"/>
                        <Button x:Name="NotificationOkButton" Content="OK" Width="100" Height="40" Margin="5" Click="NotificationOk_Click" FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        </Grid>
    </DockPanel>
</Window>
