<Window x:Class="DeadEditor.AlbumSearchDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manual Album Search" Height="350" Width="600"
        MinHeight="300" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        Foreground="White"
        ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" Text="Search MusicBrainz for album releases:"
                   FontSize="14" Margin="0,0,0,20" Foreground="#CCCCCC"/>

        <!-- Album Name -->
        <TextBlock Grid.Row="1" Text="Album Name:" Margin="0,0,0,8" Foreground="White" FontSize="13"/>
        <TextBox x:Name="AlbumNameTextBox" Grid.Row="2" Height="35" Margin="0,0,0,20" FontSize="14"
                 Background="#2D2D30" Foreground="White" BorderBrush="#555555" BorderThickness="1" Padding="8,6"/>

        <!-- Artist -->
        <TextBlock Grid.Row="3" Text="Artist:" Margin="0,0,0,8" Foreground="White" FontSize="13"/>
        <TextBox x:Name="ArtistTextBox" Grid.Row="4" Height="35" Margin="0,0,0,20" FontSize="14"
                 Background="#2D2D30" Foreground="White" BorderBrush="#555555" BorderThickness="1" Padding="8,6"/>

        <!-- Year (optional) -->
        <TextBlock Grid.Row="5" Text="Year (optional - helps narrow results):" Margin="0,0,0,8" Foreground="White" FontSize="13"/>
        <TextBox x:Name="YearTextBox" Grid.Row="6" Height="35" Margin="0,0,0,25" MaxLength="4" FontSize="14"
                 Background="#2D2D30" Foreground="White" BorderBrush="#555555" BorderThickness="1" Padding="8,6"
                 ToolTip="e.g., 2003"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Search" Width="100" Height="35" Margin="0,0,10,0"
                    Click="SearchButton_Click" IsDefault="True"
                    Background="#0E639C" Foreground="White" BorderThickness="0"/>
            <Button Content="Cancel" Width="100" Height="35"
                    Click="CancelButton_Click" IsCancel="True"
                    Background="#3E3E42" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
